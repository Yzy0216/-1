page {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    background-color: #f7f7f7;
  }
  
  .MH-box {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 30rpx;
  }
  .detail{
    padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #f0f0f0;  
  color: #999;
  font-size: 36rpx;
  }
  .item-list{
    border-bottom: 1rpx solid #f0f0f0;
    box-sizing: border-box;
    padding: 20rpx 0rpx;
    display: flex;
    align-items: center; 
    color: #999;  
  }
  .item1{
    display: inline-block;
    width: 30%;
    font-size: 32rpx;
  }
  .item2{
    display: inline-block;
    width: 70%;    
    font-size: 32rpx;
  }